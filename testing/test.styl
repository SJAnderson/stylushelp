    width 100%
    .name
      background $background_color
      bottom 10px
      font-family $subtitle_font
      font-size 25px
      line-height 25px
      padding 8px
      position absolute
      text-transform uppercase
  .social
    padding 8px
    .social-button
      display inline-block
      height 35px
      margin-right 2px
      text-align center
      width 35px
      i
        color $frame_text_color
        font-size 20px
        line-height 35px
      &.facebook
        background $facebook_blue
      &.youtube
        background $youtube_red
      &.twitter
        background $twitter_blue
      &.instagram
        background $instagram_blue
      &.soundcloud
        background $soundcloud_orange
  .bio
    font-size 14px
    font-weight 100
    line-height 17px
    padding 0px 8px
    p
      margin-bottom 10px

.panels-wrapper .panels .panel > .loader
  font-size 24px
  margin-top 50px
  text-align center



.panels-wrapper .menu
  bottom unit($footer_height, 'px')
  position absolute
  text-transform uppercase
  top 0px
  transform translate(unit($panel_width, 'px'), 0)
  transition all .2s ease-in
  width 100%
  z-index 30
  &.active
    transform translate(0, 0)
  .overlay
    background rgba(black, .6)
    bottom 0
    cursor pointer
    height 100%
    position absolute
    top 0
    width 100%
    z-index 5
  .nav-title
    background $secondary_color
    border-bottom 1px solid lighten($background_color, 10)
    box-shadow 0px 0px 10px black
    font-size 20px
    line-height 20px
    padding 15px 0px
    position absolute
    right 0px
    width unit($panel_width - $header_height, 'px')
    z-index 7
    > i
      margin 0px 10px
  .nav-items
    background $background_color
    box-shadow 0px 0px 10px black
    height 100%
    position absolute
    right 0px
    top 50px
    width unit($panel_width - $header_height, 'px')
    z-index 6
  .nav-item
    border-bottom 1px solid lighten($background_color, 10)
    cursor pointer
    font-size 20px
    line-height 20px
    padding 15px 10px
    &:hover
      background $secondary_color
    > i
      font-smoothing antialiased
      margin-right 10px
