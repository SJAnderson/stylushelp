$panel_width = 320
$header_height = 50
$footer_height = 50
$texture = 'http://media.lessthan3.com/wp-content/uploads/2014/03/footer-overlay.png'

// fancybox instagram styling
.fancybox-skin.instagram
  background $background_color
  color color_offset($background_color,60)
  .fancybox-title
    padding 10px 10px 0px 10px
    .info
      .username
        color color_offset($background_color,60)
        font-family $subtitle_font
        text-transform uppercase
      .created
        color color_offset($background_color,60)
        padding-left 15px
    .caption
      padding-top 5px
    .social-wrap
      padding 0
      ul.social-buttons
        display inline-block
        margin 5px 0 0
        padding 5px 10px 0 0
        z-index 15
        > li
          width 75px
        &.loaded li:nth-child(2)
          margin-left 25px

#sms-reminder-fancybox
  background-position center center
  background-repeat no-repeat
  background-size cover !important
  box-shadow 10px 10px 10px 10px #FFF
  color $frame_text_color
  display none
  height 325px
  max-width 100%
  position relative
  text-align center
  width 650px
  .top
    cursor default
    font-family $subtitle_font
    font-size 80px
    padding-top 45px
    user-select none
  .subtitle
    cursor default
    font-size 22px
    line-height 25px
    margin 0px auto
    padding 40px 0 25px
    user-select none
    width 480px
  .number-form
    background lighten(black, 15)
    border 1px solid lighten(black, 15)
    box-sizing border-box
    color $frame_text_color
    font-size 22px
    height 43px
    margin-left -66px
    margin-right 4px
    max-width 200px
    padding 5px
    outline none
    vertical-align top
    &:focus
      outline 0px none transparent
      outline-color none
      outline-style none
      outline-width 0px
  .submit
    background $secondary_color
    box-sizing border-box
    cursor pointer
    display inline-block
    margin 0px auto
    padding 10px 5px
    position relative
    text-transform uppercase
    user-select none
    i
      font-size 22px
    span
      display inline-block
      font-family $subtitle_font
      font-size 22px
      padding-right 12px
    &:hover
      background darken($secondary_color, 10)
  .fancy-close
    bottom 10px
    color $facebook_blue
    cursor pointer
    position absolute
    right 15px
    text-transform uppercase
    user-select none
    i
      color $facebook_blue
      margin-left 5px
    &:hover, &:hover i
      color darken($facebook_blue, 4)

@media (max-width: 600px)
  #sms-reminder-fancybox
    height 100%
    min-height 100%
    .subtitle
      font-size 15px
      padding 20px 15px
    .number-form
      font-size 18px
      height 36px
    .submit
      font-size 18px
      padding 8px 4px
      i, span
        font-size 18px

  .fancybox-skin.instagram .fancybox-title .info
    .username, .created
      font-size 14px
    .caption
      font-size 14px
      padding-top 3px
    .social-wrap ul.social-buttons
      display none

  // iOS hack to stop zoom
  .lt3-chat
    textarea
      font-size 16px

@media (max-width: 480px)
  .fancybox-skin.instagram .fancybox-title .info
    .username, .created
      font-size 12px
      line-height 12px
    .caption
      line-height 12px
      font-size 12px
      padding-top 1px
    .social-wrap ul.social-buttons
      display none

